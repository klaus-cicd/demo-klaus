            </dependency>
            <dependency>
                <groupId>com.klaus.fd</groupId>
                <artifactId>fast-dev-core</artifactId>
                <version>${fd.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaus.fd</groupId>
