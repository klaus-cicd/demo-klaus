            </dependency>
            <dependency>
                <groupId>com.klaus.fd</groupId>
                <artifactId>fast-dev-auth</artifactId>
                <version>${fd.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaus.fd</groupId>
                <artifactId>fast-dev-mq</artifactId>
                <version>${fd.version}</version>
            </dependency>
        </dependencies>
