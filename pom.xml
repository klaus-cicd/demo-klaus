    <dependencies>
        <dependency>
            <groupId>com.klaus.demo</groupId>
            <artifactId>demo-comm</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.1</version> <!-- Add the desired version here -->
                <configuration>
                    <!-- Compiler configuration goes here if needed -->
                </configuration>
            </plugin>
            <!-- Other plugins and configurations -->
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>ali-mvn</id>
            <url>https://maven.aliyun.com/nexus/content/repositories/central/</url>
        </repository>

        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>

        <repository>
            <id>local-nexus</id>
            <url>http://localhost:18081/repository/maven-public/</url>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
            </snapshots>
            <releases>
                <enabled>true</enabled>
